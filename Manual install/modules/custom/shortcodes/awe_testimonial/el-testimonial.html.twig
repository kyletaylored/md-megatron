{% if main["style"] == "style-1" %}
	<div class="quote-1 __block testi-item {{ main["style"] }}">
		<header class="hr-header">
			<h1 class="smb text-responsive testi-name">{{ main['title']|raw }}</h1>
			<div class="common-serif __caption testi-subtitle">{{ main['subtitle']|raw }}</div>
			<div class="separator-2-color"></div>
			<div class="__content testi-desc">{{ main['description']|raw }}</div>
		</header>
		<h6 class="position">{{ main['position']|raw }}</h6>
		<div class="star-ratings">
			{% for i in 1..star["num"] %}
				<span class="rated">&#9733;</span>
			{% endfor %}
		</div>
	</div>
{% elseif main["style"] == "style-2" %}
	<div class="quote-2 block-testimonial-2 testi-item {{ main["style"] }}">
		<div class="__content text-center">
			<div class="font-serif-italic testi-desc">{{ main['description']|raw }}</div>
			<i class="fa fa-quote-right"></i>
			<h6 class="testi-position">{{ main['position']|raw }}</h6>
			<div class="star-ratings">
				{% for i in 1..star["num"] %}
					<span class="rated">&#9733;</span>
				{% endfor %}
			</div>
		</div>
	</div>
{% elseif main["style"] == "style-3" %}
	<div class="quote-3 block-testimonial-3 testi-item {{ main["style"] }}">
		<div class="__content text-center">
			<div class="__image">
				<img src="{% if image["file"]["url"] %} {{ image["file"]["url"] }} {% else %} {{ 'http://placehold.it/90x90' }} {% endif %}" alt="profile icon" class="ac-image-thumb" />
			</div>
			<div class="font-serif-italic testi-desc">{{ main['description']|raw }}</div>
			<h6 class="testi-position">{{ main['position']|raw }}</h6>
			<div class="star-ratings">
				{% for i in 1..star["num"] %}
